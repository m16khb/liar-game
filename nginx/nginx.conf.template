# Nginx 리버스 프록시 설정

events {
    worker_connections 1024;
}

http {
    # 업스트림: API 백엔드 (호스트에서 실행 중인 NestJS)
    upstream api_backend {
        server host.docker.internal:4000;
    }

    # 업스트림: 웹 프론트엔드 (호스트에서 실행 중인 Next.js)
    upstream web_frontend {
        server host.docker.internal:3000;
    }

    # 로깅 설정
    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/error.log warn;

    # 기본 설정
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;

    # MIME 타입
    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    # 메인 서버 블록
    server {
        listen 80;
        server_name localhost;

        # Health Check 엔드포인트 (Docker Compose Health Check용)
        location /health {
            access_log off;
            return 200 "OK\n";
            add_header Content-Type text/plain;
        }

        # API 프록시 (NestJS 백엔드) - /api/ prefix 유지
        # Auth Hooks 포함 모든 API 요청 처리
        location /api/ {
            proxy_pass http://api_backend;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header Content-Type $content_type;
            proxy_cache_bypass $http_upgrade;

            # Webhook 헤더 전달 (Standard Webhooks Specification)
            proxy_set_header webhook-id $http_webhook_id;
            proxy_set_header webhook-timestamp $http_webhook_timestamp;
            proxy_set_header webhook-signature $http_webhook_signature;

            # 타임아웃 설정
            proxy_connect_timeout 60s;
            proxy_send_timeout 60s;
            proxy_read_timeout 60s;
        }

        # WebSocket 프록시 (게임 실시간 통신)
        location /ws/ {
            proxy_pass http://api_backend/ws/;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "Upgrade";
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;

            # WebSocket 타임아웃 (게임 세션 유지)
            proxy_connect_timeout 7d;
            proxy_send_timeout 7d;
            proxy_read_timeout 7d;
        }

        # 웹 프론트엔드 프록시 (Next.js)
        location / {
            proxy_pass http://web_frontend;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header X-Forwarded-Host $host;
            proxy_cache_bypass $http_upgrade;

            # Next.js 타임아웃
            proxy_connect_timeout 60s;
            proxy_send_timeout 60s;
            proxy_read_timeout 60s;

            # 큰 헤더 및 쿠키 처리 (Supabase OAuth)
            proxy_buffer_size 16k;
            proxy_buffers 8 16k;
            proxy_busy_buffers_size 32k;
        }
    }
}
