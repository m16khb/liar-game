{
  "version": "0.1.0",
  "mode": "personal",
  "projectName": "liar-game",
  "projectType": "fullstack",
  "projectLanguage": "typescript",
  "locale": "ko",
  "frontend": {
    "framework": "nextjs",
    "version": "15.3.1",
    "testFramework": "vitest",
    "packageManager": "pnpm"
  },
  "backend": {
    "framework": "nestjs",
    "version": "11.0.11",
    "testFramework": "jest",
    "packageManager": "pnpm",
    "database": "postgresql",
    "cache": "redis"
  },
  "monorepo": {
    "tool": "turbo",
    "version": "2.3.3",
    "packageManager": "pnpm",
    "workspaces": ["apps/*", "packages/*"]
  },
  "testFramework": "vitest|jest",
  "linter": "eslint",
  "formatter": "prettier",
  "coverageTarget": 85,
  "features": [
    "auth",
    "realtime",
    "database",
    "websocket",
    "oauth",
    "supabase"
  ],
  "specs": {
    "completed": [
      "AUTH-002",
      "INFRA-001",
      "SETUP-001"
    ],
    "draft": [
      "UI-001",
      "AUTH-001"
    ],
    "planned": [
      "GAME-001",
      "ROOM-001",
      "CHAT-001",
      "VOICE-001",
      "PROFILE-001",
      "RANK-001"
    ]
  },
  "backup": {
    "enabled": false,
    "retentionDays": 30
  },
  "git": {
    "enabled": false,
    "autoCommit": true,
    "branchPrefix": "feature/"
  }
}
